---
import MainLayout from "../layouts/MainLayout.astro";
import TilbageKnap from "../components/TilbageKnap.astro";
---

<MainLayout title="Jesper Williander">
  <TilbageKnap />
  <main class="relative w-full min-h-screen overflow-y-auto sm:overflow-hidden">
    <!-- Baggrundsvideo -->
    <video
      autoplay
      muted
      loop
      playsinline
      class="absolute inset-0 w-full h-full object-cover opacity-80 z-10 mix-blend-overlay"
    >
      <source src="/videos/stÃ¸j.mp4" type="video/mp4" />
    </video>

    <!-- TV overlay -->
    <img
      src="/images/tv.svg"
      alt="TV Overlay desktop"
      class="hidden sm:block absolute inset-0 w-full h-full object-cover z-20 pointer-events-none"
    />
    <img
      src="/images/mobil.svg"
      alt="TV Overlay mobil"
      class="block sm:hidden absolute inset-0 w-full h-full object-cover z-40 pointer-events-none"
    />

    <!-- Logo/menu -->
    <a
      href="/"
      class="absolute left-15 top-11 z-30 flex flex-col items-center group
      sm:left-4 sm:top-25
      md:left-5 md:top-20
      lg:left-40 lg:top-15"
    >
      <img
        src="/images/logo.png"
        alt="Logo"
        class="w-20 h-20 mb-2 sm:w-12 sm:h-12 md:w-20 md:h-20 lg:w-28 lg:h-28"
      />
    </a>

    <!-- Om mig grid -->
    <section
      class="relative w-full flex items-center justify-center z-30 py-24 sm:py-0"
    >
      <div
        class="grid grid-cols-1 sm:mt-60 md:grid-cols-2 gap-12 items-center w-[80vw] max-w-4xl px-6"
      >
        <div
          class="order-1 flex flex-col justify-start items-start text-center md:text-left"
        >
          <h1 class="text-white font-['Jersey_10'] text-4xl mb-6 sm:text-3xl">
            Om mig
          </h1>
          <p class="text-white text-lg leading-relaxed mb-4 sm:text-base">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris in
            eros nec felis laoreet egestas. Aliquam erat volutpat. Integer non
            elit ac tortor sagittis cursus at eget nunc...
          </p>
        </div>

        <div class="order-2 flex justify-center items-center">
          <div
            class="rounded-2xl overflow-hidden border-4 border-[#4bae46] w-72 h-72 sm:w-55 sm:h-55 sm:mt-8 flex items-center justify-center"
          >
            <img
              src="/images/jesper.jpg"
              alt="Jesper Williander"
              class="object-cover w-full h-full grayscale hover:grayscale-0 transition duration-500"
            />
          </div>
        </div>
      </div>
    </section>
  </main>
</MainLayout>
