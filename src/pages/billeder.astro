---
import MainLayout from "../layouts/MainLayout.astro";
import TilbageKnap from "../components/TilbageKnap.astro";
import BilledeKarussel from "../components/BilledeKarussel.jsx";
---

<MainLayout title="Jesper Williander">
  <TilbageKnap />
  <main class="relative w-full h-screen overflow-hidden">
    <!-- Baggrundsvideo -->
    <video
      autoplay
      muted
      loop
      playsinline
      class="absolute inset-0 w-full h-full object-cover opacity-100 z-10 mix-blend-overlay"
    >
      <source src="/videos/stÃ¸j.mp4" type="video/mp4" />
    </video>

    <!-- TV overlay: desktop og mobil -->
    <img
      src="/images/tv.svg"
      alt="TV Overlay desktop"
      class="hidden sm:block absolute inset-0 w-full h-full object-cover z-20 pointer-events-none"
    />
    <img
      src="/images/mobil.svg"
      alt="TV Overlay mobil"
      class="block sm:hidden absolute inset-0 w-full h-full object-cover z-40 pointer-events-none"
    />
    <!-- Logo/menu til venstre -->
    <a
      href="/"
      class="absolute left-15 top-11 z-30 flex flex-col items-center group
        sm:left-4 sm:top-25
        md:left-5 md:top-20
        lg:left-40 lg:top-15"
    >
      <img
        src="/images/logo.png"
        alt="Logo"
        class="w-20 h-20 mb-2 sm:w-12 sm:h-12 md:w-20 md:h-20 lg:w-28 lg:h-28"
      />
    </a>

    <!-- Indhold -->
    <section
      class="absolute inset-0 flex flex-col items-center justify-center z-30 px-4 text-center"
    >
      <h1
        class="text-white font-['Jersey_10'] text-5xl sm:text-6xl md:text-7xl lg:text-8xl -mt-20 mb-20"
      >
        Billeder
      </h1>

      <div class="w-full max-w-5xl">
        <BilledeKarussel client:load />
      </div>
    </section>
  </main>
</MainLayout>
