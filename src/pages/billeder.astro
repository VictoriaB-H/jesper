    </video>

    <!-- TV overlay -->
    <img
      src="/images/tv.svg"
      alt="TV Overlay"
      class="absolute inset-0 w-full h-full object-cover z-20 pointer-events-none"
    />

    <!-- Indhold -->
    <section class="absolute inset-0 flex items-center justify-center z-30">
      <div
        class="px-12 py-10 flex flex-row gap-12 items-start w-[80vw] max-w-6xl"
      >
        <!-- Venstre kolonne -->
        <div class="flex flex-col items-start w-1/3 min-w-[220px] mt-38">
          <h1 class="text-white font-['Jersey_10'] text-5xl mb-8">Billeder</h1>
